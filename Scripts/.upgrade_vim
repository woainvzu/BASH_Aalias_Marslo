#!/bin/bash

VIM_SRC=$(dirname $(readlink -f $0))/../tools-src/vim

if [ ! -d "$VIM_SRC" ]; then
  echo "Bad VIM source path. Exit."
  exit 1
fi

pushd $VIM_SRC

git pull
./configure --prefix=/home/mpp/w3liu/tools --with-features=huge > vim-build.log
make -j3 >> vim-build.log
make install >> vim-build.log

popd
